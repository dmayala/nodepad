extends ../layout

block content

  h2 Log In
  p
    a(href='/users/new', class='button') Register 
  form(method='post', action='/sessions')
    div
      label Email:
      input(name='user[email]', value=user.email || '')
    div
      label Password:
      input(name='user[password]', value=user.password || '', type='password')
    div
      input(type='submit', value='Log In')