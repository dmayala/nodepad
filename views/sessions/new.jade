extends ../layout

block content

  .page
    h2 Log In
    p
      a.button(href='/users/new') Register 
    form(method='post', action='/sessions')
      div
        label Email:
        input(name='user[email]', value=user.email || '')
      div
        label Password:
        input(name='user[password]', value=user.password || '', type='password')
      div
        input(type='submit', value='Log In')